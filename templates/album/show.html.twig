{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container card mt-5 p-3">
        <h1>Album</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Pin</th>
                <td>{{ album.pin }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ album.slug }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ album.created ? album.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('app_album_index') }}" class="btn btn-primary w-100">Zur√ºck</a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="btn btn-primary w-100">Bearbeiten</a>
            </div>
            <div class="col-md-4">
                {{ include('album/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

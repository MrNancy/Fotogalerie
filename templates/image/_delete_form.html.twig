<form method="post" action="{{ path('app_image_delete', {'id': image.id}) }}"
      onsubmit="return confirm('Soll dieser Eintrag wirklich gelöscht werden?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button class="btn btn-danger w-100"><i class="mdi mdi-trash-can me-1"></i>Löschen</button>
</form>
